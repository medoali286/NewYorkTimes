<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/articleDetails_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Database id goes here"
            android:textSize="18sp"
             />

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/articleDetails_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="headline goes here"
            android:textSize="18sp"
             />

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/articleDetails_pub_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="pub date goes here"
            android:textSize="18sp"
           />

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/articleDetails_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="url goes here"
            android:textSize="18sp"

             />

    </LinearLayout>

</ScrollView>